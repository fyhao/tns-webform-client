<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:widgets="utils/widgets" loaded="pageLoaded" id="offlinePageViewScreen" cssClass="screen">
    <Page.actionBar>
        <widgets:action-bar />
    </Page.actionBar>

    <StackLayout>
		<ListView class="list" items="{{ menuItems }}" itemTap="menuItemTap" css="padding:10;">
			<ListView.itemTemplate>
				<GridLayout cssClass="list-item" columns="auto, *">
					<Label cssClass="list-title" col="1" text="{{ title }}" textWrap="true" height="44" />
				</GridLayout>
			</ListView.itemTemplate>
		</ListView>
        <!-- END_CUSTOM_CODE_homeView -->
    </StackLayout>
</Page>
